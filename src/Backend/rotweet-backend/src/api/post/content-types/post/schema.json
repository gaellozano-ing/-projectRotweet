{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "content": {
      "type": "text",
      "maxLength": 280,
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::profile.profile",
      "inversedBy": "posts"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::post.post"
    },
    "likes": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::post.post"
    }
  }
}
